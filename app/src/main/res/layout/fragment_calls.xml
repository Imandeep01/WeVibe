<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calls"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"

        android:id="@+id/Card1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/caller_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/guy_pic" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/caller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/call_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feb 28, 2023 10:25 AM"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/call_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration: 2m 30s"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/call_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1C1C1C"
                android:backgroundTint="#000000"
                android:src="@drawable/outgoing_call" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"

        android:id="@+id/Card2"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/caller_image2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/friend4" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/caller_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kevin"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/call_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feb 28, 2023 10:25 AM"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/call_duration2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration: 2m 30s"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/call_type_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1C1C1C"
                android:backgroundTint="#000000"
                android:src="@drawable/outgoing_call" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"

        android:id="@+id/Card3"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/caller_image3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/friend2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/caller_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jackie"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/call_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feb 28, 2023 10:25 AM"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/call_duration4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration: 2m 30s"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/call_type_icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1C1C1C"
                android:backgroundTint="#000000"
                android:src="@drawable/incoming_call" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>

